<html>
  <body>
    <p class="commonHome"> 共通教養科目 </p>
    <%= form_with model: @commoncource, url: commoncources_path do |post| %>
      <%= hidden_field_tag :model, "commoncource" %>
    <div>
      <p>講義</p>
        <%= post.text_field :lecture, placeholder: "講義" %>
    
      <p>教授</p>
        <%= post.text_field :professor, placeholder: "教授" %>

      <p>成績内容</p>
        <%= post.text_field :grade, placeholder: "成績内容" %>

      <p>テスト評価</p>
        <%= post.text_field :reportage, placeholder: "テスト評価" %>

      <p>post</p>
        <%= post.submit "投稿する" %>
    </div>
    <% end %>
   <footer class="homep_return">
       <%= link_to 'ホームページに戻る',aecsites_path, class: 'link' %>
   </footer>
  </body>
</html>