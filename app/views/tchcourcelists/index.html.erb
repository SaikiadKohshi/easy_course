<!-- ここは工学科共通科目を紹介するファイル　-->
<html>
  <body>
    <p class="tchHome"> 工学科共通科目 </p>
     <p class="headstyle"><span class="headchar">Welcome!!</span></p>
    <% if user_signed_in? %>
     <div>
      <p class="postb">
        <%= link_to "投稿する" ,new_tchcourcelist_path ,class:'posttc' %>
      </p>
     </div> 
    <% end %>
    <div id="space"></div>
    <% @tchcourcelists.each do |t| %>
    <div class="informationlist">
     <fieldset class="postli" id="short">
      <div id="textc">
       <div id="shorttext">
        <label for="lectures">
         <span class="postchar">講義</span>：
          <%= t.lecture %>
        </label>
       </div>
       <div id="shorttext">
        <label for="professors">
         <span class="postchar">教授</span>：
          <%= t.professor %>
        </label>
       </div>
      </div>
               <div id="textspace"></div>
      <div id="textlc">
        <div id="longtext">
         <label for="result">
           <span class="postchar">成績内容</span>
                  <br>
            <fieldset>
              <%= t.grade %>
            </fieldset>
         </label>
        </div>
                <div id="textspace"></div>
        <div id="longtext">
         <label for="report">
           <span class="postchar">実録</span>
                 <br>
            <fieldset>
              <%= t.reportage %>
             <!-- <textarea id="reportages" cols="106" rows="12"> -->
             <!-- </textarea> -->
            </fieldset>
         </label>
        </div>
      </div>
      <div id="deleteb">
       <% if user_signed_in? %>
        <%= button_to 'Delete', tchcourcelist_path(t), method: :delete, data: { confirm: '本当に削除しますか？' } ,class:'deletebutton' %>
       <% end %>
      </div>
     </fieldset>  
    </div>
    <div id="space"></div>
    <% end %>
    <footer class="homep_return">
     <%= link_to 'ホームページに戻る',aecsites_path, class: 'link' %>
    </footer>
  </body>
</html>