<!-- ここはログインidを持ってる人のみしか見れない投稿するサイト -->
<!-- ここでは工学教育科目である -->
<html>
  <body>
    <p class="tchHome"> 工学科共通科目 </p>
    <div class="post-container">
          <%= form_with model: @tchcourcelist, url: tchcourcelists_path, local: true do |post| %>
            <%= hidden_field_tag :model, "tchcourcelist" %>
            <div class="form-group">
              <%= post.text_field :lecture, class: "form-input", placeholder:"                                                    講義名を入れてください" %>
              <label class="form-label">講義</label>
            </div>
            <div  class="form-group">
              <%= post.text_field :professor, class: "form-input", placeholder:"                                                    教授名を入れてください" %>
              <label class="form-label">教授</label>
            </div>
            <div class="form-group">
              <%= post.text_field :grade, class: "form-input", placeholder:"                                       シラバス上にある成績評価を書いてください" %>
              <label class="form-label">成績内容</label>
            </div>
            <div class="form-group">
              <%= post.text_field :reportage, class: "form-input", placeholder:"                               テストの内容もしくは単位の取得方法を書いてください" %>
              <label class="form-label">テスト評価</label>
            </div>
            <div class="form-submit">
              <%= post.submit "投稿する", class: "submit-btn_1" %>
            </div>
     
          <% end %>
    </div>
     <footer class="homep_return">
        <%= link_to 'ホームページに戻る',aecsites_path, class: 'link' %>
     </footer>
  </body>
</html>